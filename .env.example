# RedNerve Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Required — Your Anthropic API key (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# AI model to use
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Beacon secret (shared between server and implants — change this!)
BEACON_SECRET=change-this-to-a-strong-secret

# Server
HOST=0.0.0.0
PORT=9999
BEACON_CHECKIN_INTERVAL=5
BEACON_TASK_TIMEOUT=300
DATABASE_URL=sqlite+aiosqlite:///rednerve.db
SECRET_KEY=change-this-to-a-random-string
